@model IEnumerable<ComicsMore.Models.ApplicationUser>
@{
    ViewBag.Title = "ManageUsers";
}

<h2>ManageUsers</h2>

<h2>Роли</h2>
<table class="table">
    <tr>
        <th>Название</th>
        <th>Описание</th>
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.About</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { name = user.UserName }) |
                @Html.ActionLink("Delete", "Delete", new { id = user.Id })
            </td>
        </tr>
    }
</table>