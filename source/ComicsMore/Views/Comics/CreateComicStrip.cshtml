@{
    ViewBag.Title = "CreateComicStrip";
    Layout = "~/Views/Shared/_ComicStripLayout.cshtml";
}﻿

<div  id="edit-panel">
   <ul id="tools">
       <li class="tool" id="tool-page"><span class="glyphicon glyphicon-stop"></span><p>Страница</p></li>
       <li class="tool" id="tool-template"><span class="glyphicon glyphicon-th-large"></span><p>Шаблон</p></li>
       <li class="tool" id="tool-font"><span class="glyphicon glyphicon-comment"></span><p>Текст</p></li>
       <li class="tool" id="tool-picture"><span class="glyphicon glyphicon-picture"></span><p>Картинка</p></li>
       <li class="tool" id="tool-video"><span class="glyphicon glyphicon-film"></span><p>Видео</p></li>
       <li class="tool" id="tool-property"><span class="glyphicon glyphicon-wrench"></span><p>Опубликовать</p></li>



   </ul>
</div>
<div id="edit-page">
    
    <div class="modal-window" id="modal-window-page" ><span class="glyphicon glyphicon-arrow-left strait"></span>
        <div class="modal-window-inner">
            <p class="tool-name">Выберите формат страницы</p>
            <hr />
            <input id="A4a" type="radio" name="format" value="A4a">
            <label for="A4a">А4 книжная</label>
            <input id="A4b"type="radio" name="format" value="A4b">
            <label for="A4b">А4 альбомная</label>
            
            
        </div>
    </div>
    <div class="modal-window" id="modal-window-template"><span class="glyphicon glyphicon-arrow-left strait"></span>
        <div class="modal-window-inner">
            <p class="tool-name">Выберите шаблон страницы</p>
            <hr />
            <input id="cell-1" type="radio" name="template" value="1 cell">
            <label for="cell-1"> Одна ячейка</label>
            <br />
            <input id="cell-2" type="radio" name="template" value="2 cell">
            <label for="cell-2"> Две ячейки</label>
            <br />
            <input id="cell-4" type="radio" name="template" value="4 cell">
            <label for="cell-4"> Четыре ячейки</label>
            <br />
            <input id="incline-cell" type="radio" name="template" value="incline cell">
            <label for="incline-cell"> Наклонная ячейка</label>
            <br />
            <br />
            <label for="weight-template"> Толщина границы</label>
            <input id="weight-template" type="range" max="10" min="1" value="5" name="weight">
            
            <br />
            <input id="color-template" type="color" name="color">
            <label for="color-template"> Цвет границы</label>

        </div>
    </div>
    <div class="modal-window" id="modal-window-picture"><span class="glyphicon glyphicon-arrow-left strait"></span>
        <div class="modal-window-inner">
            <input 
                   type="file" 
                   id="file-upload" 
                   name="file" 
                   accept="image/jpeg, image/png, image/gif"
            />
        </div>
    </div>
    <div class="modal-window" id="modal-window-video"><span class="glyphicon glyphicon-arrow-left strait"></span></div>
    <div id="change" class="container">
        <div class="row">
            <p class="tool-name">Редактировать текст</p>
            <hr />
            <label for="textholder-change">Текст</label>
            <input class="form-control" id="textholder-change" type="text" placeholder="Введите текст" />
        </div>
        <div class="row"><label>Шрифт</label></div>
        <div class="row"> 
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <label for="size-change">Размер </label>
                    <input class="form-control" id="size-change" type="number" max="30" min="10" value="14" placeholder="Размер" />
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <label for="color-change">Цвет </label>
                    <input class="form-control" id="color-change" type="color">
                </div>
         </div>
        <div class="row"><label>Облачко</label></div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <label for="cloud-change">Цвет </label>
                <input id="cloud-change" class="form-control" type="color">
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <label for="side-cloud-change">Cтрелка</label>
                <select id="side-cloud-change" class="form-control">
                    <option value="left">Слева</option>
                    <option value="right" selected>Справа</option>
                    <option value="top">Сверху</option>
                    <option value="bottom">Снизу</option>
                </select>
            </div>
        </div>
        
        <div class="row"><label>Размеры</label></div>
        <div class="row"><input type="range" max="10" min="1" value="5"/></div>
        <div class="row"><input class="form-control" type="button" value="Удалить" / ></div>
     </div>

    <div class="modal-window" id="modal-window-font"><span class="glyphicon glyphicon-arrow-left strait"></span>
        
        <div class="modal-window-inner">
            <p class="tool-name">Создадим текст</p>
            <hr />
            <label for="textholder-generate">Текст</label>
            <input class="form-control" id="textholder-generate" type="text" placeholder="Введите текст" />
            <label for="size-generate">Размер шрифта</label>
            <input class="form-control" id="size-generate" type="number" max="30" min="10" value="14" placeholder="Размер" />
            <label for="color-generate">Цвет шрифта</label>
            <input class="form-control" id="color-generate" type="color" value="#ffffff">
            <label for="weight-generate">Толщина шрифта</label>
            <input class="form-control" id="weight-generate" type="number" placeholder="Толщина" max="900" min="500" step="100" value="500">
            <label for="cloud-generate">Цвет облачка</label>
            <input id="cloud-generate" class="form-control" type="color">
            <label for="side-cloud-generate">Расположение стрелки</label>
            <select id="side-cloud-generate" class="form-control">
                <option value="left">Слева</option>
                <option value="right" selected>Справа</option>
                <option value="top">Сверху</option>
                <option value="bottom">Снизу</option>
            </select>
            <label for="width-generate">Ширина облака</label>
            <input class="form-control" id="width-generate" type="number" min="50" max="300" value="120" />
            <label for="height-generate">Высота облака</label>
            <input class="form-control" id="height-generate" type="number" min="50" max="300" value="70" />
            
            <div id="generate-btn">
                Генерировать
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="modal-window" id="modal-window-property"><span class="glyphicon glyphicon-arrow-left strait"></span>
    <div class="modal-window-inner">
        <label for="comics-name">Название  комикса</label>
        <input class="form-control" id="comics-name" type="text" placeholder="Название комикса" value="Мой комикс" />
         
            <input class="form-control" id="create" type="submit"/>
    </div>
</div>
</div>
<div id="content-pages">
    <h3>Страницы:</h3>
    <div id="menu-page">
       
    </div>
    <div id="btn-add-page">Добавить</div>
</div>
